{
  "name": "chromaflow",
  "description": "A modern e-commerce application with dynamic theming capabilities, built with Next.js and Google's Gemini AI",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run generate-tokens && next dev --turbopack",
    "dev:watch": "nodemon --watch tokens/colors.json --exec \"npm run generate-tokens && next dev --turbopack\"",
    "build": "npm run generate-tokens && next build",
    "start": "next start",
    "lint": "next lint",
    "build:tokens": "style-dictionary build --config config.style-dictionary.js",
    "clean:tokens": "style-dictionary clean",
    "generate-tokens": "ts-node --project scripts/tsconfig.json scripts/generate-css-vars.ts",
    "postinstall": "npm run generate-tokens",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "debug": "cross-env NODE_OPTIONS='--inspect' next dev"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@next/third-parties": "^15.3.3",
    "@reduxjs/toolkit": "^2.8.2",
    "cmdk": "^1.1.1",
    "framer-motion": "^12.16.0",
    "motion": "^12.16.0",
    "next": "^15.3.3",
    "next-redux-wrapper": "^8.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-responsive": "^10.0.1",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@jest/globals": "^30.0.0-beta.3",
    "@storybook/addon-a11y": "^9.0.4",
    "@storybook/addon-actions": "^9.0.4",
    "@storybook/addon-onboarding": "^9.0.4",
    "@storybook/nextjs": "^9.0.4",
    "@storybook/nextjs-vite": "^9.0.4",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitest/browser": "^3.2.1",
    "@vitest/coverage-v8": "^3.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-plugin-storybook": "^9.0.4",
    "nodemon": "^3.1.10",
    "playwright": "^1.52.0",
    "postcss": "^8.5.4",
    "storybook": "^9.0.4",
    "style-dictionary": "^5.0.0",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
